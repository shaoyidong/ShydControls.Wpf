<UserControl
    x:Class="ShydControls.Wpf.Demo.Views.IndustrialComponentsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:industrialControls="clr-namespace:ShydControls.Wpf.IndustrialComponents;assembly=ShydControls.Wpf"
    xmlns:local="clr-namespace:ShydControls.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#1E1E1E" TextElement.Foreground="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  标题  -->
        <Border
            Margin="10"
            Padding="10"
            Background="#252526"
            CornerRadius="5">
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Foreground="#CCCCCC">
                工业组件
            </TextBlock>
        </Border>

        <!--  控件展示区域  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="10"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  阀门控件  -->
                <Border
                    Margin="10"
                    Padding="15"
                    Background="#252526"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold">
                            阀门控件 (Valve)
                        </TextBlock>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="12"
                            Foreground="#999999">
                            展示不同状态的阀门
                        </TextBlock>
                        <WrapPanel>
                            <StackPanel Margin="10">
                                <industrialControls:Valve
                                    Width="60"
                                    Height="60"
                                    Theme="default" />
                                <TextBlock
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    Text="默认状态" />
                            </StackPanel>
                            <StackPanel Margin="10">
                                <industrialControls:Valve
                                    Width="60"
                                    Height="60"
                                    Theme="green" />
                                <TextBlock
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    Text="绿状态" />
                            </StackPanel>
                            <StackPanel Margin="10">
                                <industrialControls:Valve
                                    Width="60"
                                    Height="60"
                                    Theme="red" />
                                <TextBlock
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    Text="红状态" />
                            </StackPanel>
                            <StackPanel Margin="10">
                                <industrialControls:Valve
                                    Width="60"
                                    Height="60"
                                    Foreground="Yellow"
                                    TextVisibility="True"
                                    Theme="default" />
                                <TextBlock
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    Text="手动阀" />
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!--  管道控件  -->
                <Border
                    Margin="10"
                    Padding="15"
                    Background="#252526"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold">
                            管道控件 (Pipeline)
                        </TextBlock>
                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                            <TextBlock FontSize="12" Foreground="#999999">
                                展示不同类型的管道
                            </TextBlock>
                            <CheckBox
                                x:Name="chkPipeLineIsRunning"
                                Margin="10,0,0,0"
                                Content="IsRunning"
                                Foreground="White"
                                IsChecked="True" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <industrialControls:Pipeline
                                Width="200"
                                Height="20"
                                Margin="5"
                                Direction="0"
                                IsRunning="{Binding ElementName=chkPipeLineIsRunning, Path=IsChecked}" />
                            <industrialControls:Pipeline
                                Width="100"
                                Height="10"
                                Margin="5"
                                Direction="1"
                                IsRunning="{Binding ElementName=chkPipeLineIsRunning, Path=IsChecked}"
                                LiquidColor="Blue" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  泵和冷却塔控件  -->
                <Border
                    Margin="10"
                    Padding="15"
                    Background="#252526"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold">
                            泵和冷却塔控件
                        </TextBlock>
                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                            <TextBlock FontSize="12" Foreground="#999999">
                                展示工业设备组件
                            </TextBlock>
                            <CheckBox
                                x:Name="chkIndustrialIsRunning"
                                Margin="10,0,0,0"
                                Content="IsRunning"
                                Foreground="White"
                                IsChecked="True" />
                            <CheckBox
                                x:Name="chkIndustrialIsFault"
                                Margin="10,0,0,0"
                                Content="IsFault"
                                Foreground="White"
                                IsChecked="False" />
                        </StackPanel>
                        <WrapPanel>
                            <industrialControls:CoolingPump
                                Width="150"
                                Height="150"
                                IsFaultState="{Binding ElementName=chkIndustrialIsFault, Path=IsChecked}"
                                IsRunning="{Binding ElementName=chkIndustrialIsRunning, Path=IsChecked}" />
                            <industrialControls:CoolingTower
                                Width="150"
                                Height="150"
                                IsFaultState="{Binding ElementName=chkIndustrialIsFault, Path=IsChecked}"
                                IsRunning="{Binding ElementName=chkIndustrialIsRunning, Path=IsChecked}" />
                        </WrapPanel>
                    </StackPanel>
                </Border>
                <!--  气体管道控件  -->
                <Border
                    Margin="10"
                    Padding="15"
                    Background="#252526"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold">
                            粒子束
                        </TextBlock>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="12"
                            Foreground="#999999">
                            展示不同类型的气体管道
                        </TextBlock>
                        <WrapPanel>
                            <StackPanel Margin="10">
                                <industrialControls:SingleBeamGas
                                    Width="150"
                                    Height="10"
                                    Direction="0"
                                    IsRunning="True"
                                    LiquidColor="Red">
                                    <industrialControls:SingleBeamGas.Background>
                                        <LinearGradientBrush StartPoint="1 0.5" EndPoint="0 0.5">
                                            <GradientStop Offset="1" Color="#7fff0000" />
                                            <GradientStop Offset="0" Color="GhostWhite" />
                                        </LinearGradientBrush>
                                    </industrialControls:SingleBeamGas.Background>
                                </industrialControls:SingleBeamGas>
                                <TextBlock
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    Text="单束" />
                            </StackPanel>
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal">
                                    <industrialControls:DemoBeamSouceCell>
                                        <industrialControls:DemoBeamSouceCell.LayoutTransform>
                                            <RotateTransform Angle="90" />
                                        </industrialControls:DemoBeamSouceCell.LayoutTransform>
                                    </industrialControls:DemoBeamSouceCell>
                                    <industrialControls:DoubleBeamGas
                                        Width="183"
                                        Height="20"
                                        CapRadius="0"
                                        Direction="1"
                                        IsRunning="True"
                                        LiquidColor="Red"
                                        Visibility="{Binding GasVisibility[0], RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <industrialControls:DoubleBeamGas.Background>
                                            <LinearGradientBrush StartPoint="1 0.5" EndPoint="0 0.5">
                                                <GradientStop Offset="0" Color="#7fff0000" />
                                                <GradientStop Offset="1" Color="GhostWhite" />
                                            </LinearGradientBrush>
                                        </industrialControls:DoubleBeamGas.Background>
                                    </industrialControls:DoubleBeamGas>
                                </StackPanel>
                                <TextBlock
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    Text="双束" />
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>