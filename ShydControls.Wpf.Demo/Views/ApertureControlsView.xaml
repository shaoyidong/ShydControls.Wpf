<UserControl
    x:Class="ShydControls.Wpf.Demo.Views.ApertureControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:apertureControls="clr-namespace:ShydControls.Wpf.Aperture;assembly=ShydControls.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShydControls.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">   
    <Grid Background="#1E1E1E" TextElement.Foreground="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  标题  -->
        <Border
            Margin="10"
            Padding="10"
            Background="#252526"
            CornerRadius="5">
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Foreground="#CCCCCC">
                光圈控件
            </TextBlock>
        </Border>

        <!--  控件展示区域  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="10"
            CanContentScroll="True"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  公共滑块控制  -->
                <StackPanel Margin="10,0,10,20" Background="#252526">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontWeight="Bold">
                        控制滑块
                    </TextBlock>
                    <Slider
                        x:Name="slider"
                        Width="300"
                        Maximum="100"
                        Minimum="0"
                        Value="65" />
                </StackPanel>

                <!--  光圈控件展示  -->
                <WrapPanel>
                    <!--  Aperture CircularProgressBar  -->
                    <Border
                        Width="250"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                Aperture CircularProgressBar
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                带有渐变效果的环形进度条
                            </TextBlock>
                            <Grid HorizontalAlignment="Center">
                                <apertureControls:CircularProgressBar
                                    Width="180"
                                    Height="180"
                                    ProgressValue="{Binding ElementName=slider, Path=Value}"
                                    RingBaseColor="#eee"
                                    RingSize="160" />
                                <StackPanel
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="CPU 使用率" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#0078D7">
                                        <Run Text="{Binding ElementName=slider, Path=Value, StringFormat={}{0:F0}}" />
                                        <Run Text="%" />
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  GlowRingControl  -->
                    <Border
                        Width="250"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                GlowRingControl
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                发光环控件
                            </TextBlock>
                            <Grid HorizontalAlignment="Center">
                                <apertureControls:GlowRingControl
                                    Width="180"
                                    Height="180"
                                    RingSize="160" />
                                <StackPanel
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="GPU 状态" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#00BFFF">
                                        <Run Text="运行中" />
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  Aperture CircularProgressBar 彩色版  -->
                    <Border
                        Width="250"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                彩色环形进度条
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                展示不同颜色效果
                            </TextBlock>
                            <Grid HorizontalAlignment="Center">
                                <apertureControls:CircularProgressBar
                                    Width="180"
                                    Height="180"
                                    ProgressValue="{Binding ElementName=slider, Path=Value}"
                                    RingBaseColor="#FF00FF"
                                    RingSize="160" />
                                <StackPanel
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        Foreground="White"
                                        Text="内存使用" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#FF00FF">
                                        <Run Text="{Binding ElementName=slider, Path=Value, StringFormat={}{0:F0}}" />
                                        <Run Text="%" />
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
