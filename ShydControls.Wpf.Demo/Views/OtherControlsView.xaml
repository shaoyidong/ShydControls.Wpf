<UserControl
    x:Class="ShydControls.Wpf.Demo.Views.OtherControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShydControls.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:otherControls="clr-namespace:ShydControls.Wpf.Others;assembly=ShydControls.Wpf"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#1E1E1E" TextElement.Foreground="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  标题  -->
        <Border
            Margin="10"
            Padding="10"
            Background="#252526"
            CornerRadius="5">
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Foreground="#CCCCCC">
                其他控件
            </TextBlock>
        </Border>

        <!--  控件展示区域  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="10"
            VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <!--  SkeletonScreen 控件  -->
                <Border
                    Width="500"
                    Margin="10"
                    Padding="15"
                    Background="#252526"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold">
                            SkeletonScreen
                        </TextBlock>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="12"
                            Foreground="#999999">
                            骨架屏加载控件
                        </TextBlock>
                        <otherControls:SkeletonScreen Width="500" Height="200" />
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Foreground="#999999">
                            用于数据加载时的占位显示
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--  ThreeDTest 控件  -->
                <Border
                    Width="400"
                    Margin="10"
                    Padding="15"
                    Background="#252526"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold">
                            ThreeDTest
                        </TextBlock>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="12"
                            Foreground="#999999">
                            3D效果测试控件
                        </TextBlock>
                        <otherControls:ThreeDTest Width="350" Height="300" />
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Foreground="#999999">
                            展示3D渲染效果
                        </TextBlock>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>