<UserControl
    x:Class="ShydControls.Wpf.Demo.Views.DashboardControlsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dashboardControls="clr-namespace:ShydControls.Wpf.Dashboards;assembly=ShydControls.Wpf"
    xmlns:local="clr-namespace:ShydControls.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#1E1E1E" TextElement.Foreground="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  标题  -->
        <Border
            Margin="10"
            Padding="10"
            Background="#252526"
            CornerRadius="5">
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Foreground="#CCCCCC">
                仪表盘控件
            </TextBlock>
        </Border>

        <!--  控件展示区域  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="10"
            CanContentScroll="True"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  公共滑块控制  -->
                <Border
                    Margin="10,0,10,10"
                    Padding="10"
                    Background="#252526"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold">
                            控制滑块
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <Slider
                                x:Name="slider"
                                Width="300"
                                VerticalAlignment="Center"
                                Maximum="100"
                                Minimum="0"
                                Value="65" />
                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16">
                                <Run Text="当前值:" /><Run Text="{Binding ElementName=slider, Path=Value, StringFormat={}{0:F0}}" />
                            </TextBlock>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!--  仪表盘控件展示  -->
                <WrapPanel>
                    <!--  Instrument 控件 - 橙色  -->
                    <Border
                        Width="200"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                Instrument 控件
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                模拟仪表盘
                            </TextBlock>
                            <StackPanel HorizontalAlignment="Center">
                                <dashboardControls:Instrument
                                    Width="150"
                                    Height="150"
                                    Interval="10"
                                    Maximum="100"
                                    Minimum="0"
                                    PlateBackground="Orange"
                                    ScaleBrush="White"
                                    Value="{Binding ElementName=slider, Path=Value}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  CPU频率仪表盘  -->
                    <Border
                        Width="200"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                CPU频率仪表盘
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                FrequencyGauge
                            </TextBlock>
                            <StackPanel HorizontalAlignment="Center">
                                <dashboardControls:FrequencyGauge
                                    Width="150"
                                    Height="150"
                                    Frequency="{Binding ElementName=slider, Path=Value}"
                                    MaxFrequency="100"
                                    Radius="67.5"
                                    Thickness="12" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  DRAM频率仪表盘  -->
                    <Border
                        Width="200"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                DRAM频率仪表盘
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                DRAMFrequencyGauge
                            </TextBlock>
                            <StackPanel HorizontalAlignment="Center">
                                <dashboardControls:DRAMFrequencyGauge
                                    Width="150"
                                    Height="150"
                                    Frequency="{Binding ElementName=slider, Path=Value}"
                                    MaxFrequency="100"
                                    Radius="67.5"
                                    Thickness="12" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  温度仪表盘  -->
                    <Border
                        Width="200"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                温度仪表盘
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                TemperatureGauge
                            </TextBlock>
                            <StackPanel HorizontalAlignment="Center">
                                <dashboardControls:TemperatureGauge
                                    Width="150"
                                    Height="150"
                                    MaxTemperature="100"
                                    Radius="67.5"
                                    Temperature="{Binding ElementName=slider, Path=Value}"
                                    Thickness="6" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  风扇速度仪表盘  -->
                    <Border
                        Width="200"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                风扇速度仪表盘
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                FanSpeedGauge
                            </TextBlock>
                            <StackPanel HorizontalAlignment="Center">
                                <dashboardControls:FanSpeedGauge
                                    Width="150"
                                    Height="150"
                                    FanSpeed="{Binding ElementName=slider, Path=Value}"
                                    MaxFanSpeed="100"
                                    Radius="67.5"
                                    Thickness="6" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  PWM仪表盘  -->
                    <Border
                        Width="200"
                        Margin="10"
                        Padding="15"
                        Background="#252526"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="14"
                                FontWeight="Bold">
                                PWM仪表盘
                            </TextBlock>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="#999999">
                                PwmGauge
                            </TextBlock>
                            <StackPanel HorizontalAlignment="Center">
                                <dashboardControls:PwmGauge
                                    Width="150"
                                    Height="150"
                                    PwmPercentage="{Binding ElementName=slider, Path=Value}"
                                    Radius="67.5"
                                    Thickness="10" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </WrapPanel>
                <Border
                    Margin="10,0,10,10"
                    Padding="10"
                    Background="#252526"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="Bold">
                            Demo
                        </TextBlock>
                        <Viewbox
                            Width="700"
                            HorizontalAlignment="Left"
                            Stretch="Uniform">
                            <local:DashboardDemo Width="900" Height="700" />
                        </Viewbox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>