<UserControl
    x:Class="ShydControls.Wpf.Demo.Views.DashboardDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chartControls="clr-namespace:ShydControls.Wpf.Charts;assembly=ShydControls.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dashboardControls="clr-namespace:ShydControls.Wpf.Dashboards;assembly=ShydControls.Wpf"
    xmlns:local="clr-namespace:ShydControls.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Viewbox
                Grid.RowSpan="2"
                Width="400"
                Height="400">
                <Grid
                    Width="500"
                    Height="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <!--  3. 温度弧形进度条  -->
                    <dashboardControls:TemperatureGauge
                        Width="500"
                        Height="500"
                        AngleRange="45"
                        MaxTemperature="{Binding ElementName=sliderCPUTemperature, Path=Maximum}"
                        Radius="212"
                        StartAngle="247.5"
                        Temperature="{Binding ElementName=sliderCPUTemperature, Path=Value}"
                        Thickness="8" />
                    <StackPanel
                        Margin="30,0,0,210"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Source="{StaticResource DrawingImageTemperature}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="13">
                            <Run Foreground="White" Text="{Binding ElementName=sliderCPUTemperature, Path=Value, StringFormat={}{0:F0}}" /><Run Foreground="#aaaaaa" Text="℃" />
                        </TextBlock>
                    </StackPanel>

                    <!--  2. 外侧PWM百分比弧形进度条  -->
                    <dashboardControls:PwmGauge
                        Width="500"
                        Height="500"
                        PwmPercentage="{Binding ElementName=sliderCPUPWM, Path=Value}"
                        Radius="190"
                        Thickness="18" />
                    <!--  5. 中间CPU频率弧形进度条  -->
                    <dashboardControls:FrequencyGauge
                        Width="500"
                        Height="500"
                        Frequency="{Binding ElementName=sliderCPUFrequency, Path=Value}"
                        MaxFrequency="{Binding ElementName=sliderCPUFrequency, Path=Maximum}"
                        Radius="112"
                        Thickness="15" />
                    <StackPanel
                        Margin="0,-20,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="35"
                            FontStyle="Italic"
                            FontWeight="Bold"
                            Foreground="OrangeRed"
                            Text="CPU" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="60"
                            FontStyle="Normal"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding ElementName=sliderCPUFrequency, Path=Value, StringFormat={}{0:F0}}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="20"
                            FontStyle="Italic"
                            FontWeight="Bold"
                            Foreground="#aaaaaa"
                            Text="MHz" />
                    </StackPanel>
                    <!--  4. 风扇转速弧形进度条  -->
                    <dashboardControls:FanSpeedGauge
                        Width="500"
                        Height="500"
                        AngleRange="65"
                        FanSpeed="{Binding ElementName=sliderCPUFanSpeed, Path=Value}"
                        MaxFanSpeed="{Binding ElementName=sliderCPUFanSpeed, Path=Maximum}"
                        Radius="175"
                        StartAngle="147.5"
                        Thickness="8">
                        <dashboardControls:FanSpeedGauge.LayoutTransform>
                            <ScaleTransform ScaleX="-1" ScaleY="1" />
                        </dashboardControls:FanSpeedGauge.LayoutTransform>
                    </dashboardControls:FanSpeedGauge>
                    <WrapPanel
                        Margin="0,0,0,95"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">
                        <Image
                            Width="15"
                            Margin="0,0,5,0"
                            Source="{StaticResource DrawingImageFan}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="15">
                            <Run Foreground="White" Text="{Binding ElementName=sliderCPUFanSpeed, Path=Value, StringFormat={}{0:F0}}" />
                            <Run Foreground="#aaaaaa" Text="RPM" />
                        </TextBlock>
                    </WrapPanel>
                </Grid>
            </Viewbox>
            <Viewbox
                Grid.RowSpan="2"
                Grid.Column="2"
                Width="400"
                Height="400">
                <Grid
                    Width="500"
                    Height="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <!--  3. 温度弧形进度条  -->
                    <dashboardControls:TemperatureGauge
                        Width="500"
                        Height="500"
                        AngleRange="45"
                        MaxTemperature="{Binding ElementName=sliderGPUTemperature, Path=Maximum}"
                        Radius="212"
                        StartAngle="247.5"
                        Temperature="{Binding ElementName=sliderGPUTemperature, Path=Value}"
                        Thickness="8">
                        <dashboardControls:TemperatureGauge.LayoutTransform>
                            <ScaleTransform ScaleX="-1" ScaleY="1" />
                        </dashboardControls:TemperatureGauge.LayoutTransform>
                    </dashboardControls:TemperatureGauge>
                    <StackPanel
                        Margin="0,0,30,210"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="20"
                            Height="20"
                            Source="{StaticResource DrawingImageTemperature}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="13">
                            <Run Foreground="White" Text="{Binding ElementName=sliderGPUTemperature, Path=Value, StringFormat={}{0:F0}}" />
                            <Run Foreground="#aaaaaa" Text="℃" />
                        </TextBlock>
                    </StackPanel>

                    <!--  2. 外侧PWM百分比弧形进度条  -->
                    <dashboardControls:PwmGauge
                        Width="500"
                        Height="500"
                        PwmPercentage="{Binding ElementName=sliderGPUPWM, Path=Value}"
                        Radius="190"
                        Thickness="18" />
                    <!--  5. 中间CPU频率弧形进度条  -->
                    <dashboardControls:FrequencyGauge
                        Width="500"
                        Height="500"
                        Frequency="{Binding ElementName=sliderGPUFrequency, Path=Value}"
                        MaxFrequency="{Binding ElementName=sliderGPUFrequency, Path=Maximum}"
                        Radius="112"
                        Thickness="15" />
                    <StackPanel
                        Margin="0,-20,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="35"
                            FontStyle="Italic"
                            FontWeight="Bold"
                            Foreground="OrangeRed"
                            Text="GPU" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="60"
                            FontStyle="Normal"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding ElementName=sliderGPUFrequency, Path=Value, StringFormat={}{0:F0}}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="20"
                            FontStyle="Italic"
                            FontWeight="Bold"
                            Foreground="#aaaaaa"
                            Text="MHz" />
                    </StackPanel>
                    <!--  4. 风扇转速弧形进度条  -->
                    <dashboardControls:FanSpeedGauge
                        Width="500"
                        Height="500"
                        AngleRange="65"
                        FanSpeed="{Binding ElementName=sliderGPUFanSpeed, Path=Value}"
                        MaxFanSpeed="{Binding ElementName=sliderGPUFanSpeed, Path=Maximum}"
                        Radius="175"
                        StartAngle="147.5"
                        Thickness="8">
                        <dashboardControls:FanSpeedGauge.LayoutTransform>
                            <ScaleTransform ScaleX="-1" ScaleY="1" />
                        </dashboardControls:FanSpeedGauge.LayoutTransform>
                    </dashboardControls:FanSpeedGauge>
                    <WrapPanel
                        Margin="0,0,0,95"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">
                        <Image
                            Width="15"
                            Margin="0,0,5,0"
                            Source="{StaticResource DrawingImageFan}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="15">
                            <Run Foreground="White" Text="{Binding ElementName=sliderGPUFanSpeed, Path=Value, StringFormat={}{0:F0}}" />
                            <Run Foreground="#aaaaaa" Text="RPM" />
                        </TextBlock>
                    </WrapPanel>
                    <StackPanel
                        Margin="0,0,0,140"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="15"
                            Foreground="White"
                            Text="OC" />
                        <ToggleButton
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Foreground="Red"
                            IsChecked="True"
                            Style="{StaticResource ToggleButtonSwitchBaseStyle}" />
                    </StackPanel>
                </Grid>
            </Viewbox>
            <Grid Grid.ColumnSpan="3">
                <!--  五维图控件  -->
                <chartControls:PentagonChart
                    Width="130"
                    Height="130"
                    Margin="0,100,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    AnimationEnabled="False"
                    FiveValue="{Binding ElementName=sliderCooling, Path=Value}"
                    FourValue="{Binding ElementName=sliderEnergySaving, Path=Value}"
                    LineColor="#c83250"
                    MaxValue="100"
                    OneValue="{Binding ElementName=sliderCPU, Path=Value}"
                    ThreeValue="{Binding ElementName=sliderSilence, Path=Value}"
                    TwoValue="{Binding ElementName=sliderGPU, Path=Value}" />
                <TextBlock
                    Margin="0,-40,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#aaaaaa"
                    Text="CPU" />
                <TextBlock
                    Margin="145,60,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#aaaaaa"
                    Text="GPU" />
                <TextBlock
                    Margin="-80,0,0,35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#aaaaaa"
                    Text="节能" />
                <TextBlock
                    Margin="80,0,0,35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#aaaaaa"
                    Text="静音" />
                <TextBlock
                    Margin="-145,60,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#aaaaaa"
                    Text="散热" />
            </Grid>
            <Grid Grid.RowSpan="2" Grid.ColumnSpan="3">
                <Grid>
                    <dashboardControls:DRAMFrequencyGauge
                        Width="200"
                        Height="200"
                        Margin="0,0,0,-15"
                        VerticalAlignment="Bottom"
                        Frequency="{Binding ElementName=sliderDRAMFrequency, Path=Value}"
                        MaxFrequency="{Binding ElementName=sliderDRAMFrequency, Path=Maximum}"
                        Radius="90"
                        Thickness="10" />
                    <TextBlock
                        Margin="215,0,0,75"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontFamily="Arial"
                        FontSize="15"
                        Foreground="#aaaaaa"
                        Text="%" />
                    <StackPanel
                        Margin="0,0,0,50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="15"
                            Foreground="#aaaaaa"
                            Text="DRAM" />
                        <TextBlock
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="Arial"
                            FontSize="15">
                            <Run Foreground="White" Text="{Binding ElementName=sliderDRAMFrequency, Path=Value, StringFormat={}{0:F0}}" /><Run Foreground="White" Text="MHz" />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Arial" />
                    <Setter Property="FontSize" Value="15" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <StackPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="频率" />
                        <Slider
                            x:Name="sliderCPUFrequency"
                            Width="200"
                            Maximum="5000"
                            Minimum="0"
                            Value="3515" />
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="温度" />
                        <Slider
                            x:Name="sliderCPUTemperature"
                            Width="200"
                            Maximum="100"
                            Minimum="0"
                            Value="62" />
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="PWM" />
                        <Slider
                            x:Name="sliderCPUPWM"
                            Width="200"
                            Maximum="100"
                            Minimum="0"
                            Value="50" />
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="转速" />
                        <Slider
                            x:Name="sliderCPUFanSpeed"
                            Width="200"
                            Maximum="5000"
                            Minimum="0"
                            Value="2500" />
                    </WrapPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="2">
                <StackPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="频率" />
                        <Slider
                            x:Name="sliderGPUFrequency"
                            Width="200"
                            Maximum="5000"
                            Minimum="0"
                            Value="3515" />
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="温度" />
                        <Slider
                            x:Name="sliderGPUTemperature"
                            Width="200"
                            Maximum="100"
                            Minimum="0"
                            Value="62" />
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="PWM" />
                        <Slider
                            x:Name="sliderGPUPWM"
                            Width="200"
                            Maximum="100"
                            Minimum="0"
                            Value="50" />
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="转速" />
                        <Slider
                            x:Name="sliderGPUFanSpeed"
                            Width="200"
                            Maximum="5000"
                            Minimum="0"
                            Value="2500" />
                    </WrapPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel>

                    <WrapPanel Margin="5">
                        <TextBlock Width="60" Text="频率" />
                        <Slider
                            x:Name="sliderDRAMFrequency"
                            Width="200"
                            Interval="1"
                            Maximum="13500"
                            Minimum="0"
                            Value="4800" />
                    </WrapPanel>
                    <StackPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Width="60" Text="CPU" />
                            <Slider
                                x:Name="sliderCPU"
                                Width="200"
                                Maximum="100"
                                Minimum="0"
                                Value="70" />
                        </WrapPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Width="60" Text="GPU" />
                            <Slider
                                x:Name="sliderGPU"
                                Width="200"
                                Maximum="100"
                                Minimum="0"
                                Value="60" />
                        </WrapPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Width="60" Text="静音" />
                            <Slider
                                x:Name="sliderSilence"
                                Width="200"
                                Maximum="100"
                                Minimum="0"
                                Value="50" />
                        </WrapPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Width="60" Text="节能" />
                            <Slider
                                x:Name="sliderEnergySaving"
                                Width="200"
                                Maximum="100"
                                Minimum="0"
                                Value="40" />
                        </WrapPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Width="60" Text="散热" />
                            <Slider
                                x:Name="sliderCooling"
                                Width="200"
                                Maximum="100"
                                Minimum="0"
                                Value="80" />
                        </WrapPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
