<UserControl
    x:Class="ShydControls.Wpf.Demo.Views.ApertureControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:apertureControls="clr-namespace:ShydControls.Wpf.Aperture;assembly=ShydControls.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShydControls.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Slider
            x:Name="slider"
            Grid.Row="0"
            Width="200"
            Margin="10"
            HorizontalAlignment="Left"
            Maximum="100"
            Minimum="0"
            Value="50" />
        <WrapPanel Grid.Row="1">
            <Grid>
                <apertureControls:CircularProgressBar
                    Width="170"
                    Height="170"
                    ProgressValue="{Binding ElementName=slider, Path=Value}"
                    RingSize="150" />
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Center"
                        FontFamily="Arial"
                        FontSize="16"
                        Foreground="White"
                        Text="CPU 温度" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Arial"
                        FontSize="16"
                        Foreground="White">
                        <Run FontWeight="Bold" Text="{Binding ElementName=slider, Path=Value, StringFormat={}{0:F}, FallbackValue=100}" />
                        <Run Text="[℃]" />
                    </TextBlock>
                </StackPanel>
            </Grid>
            <Grid>
                <apertureControls:GlowRingControl
                    Width="170"
                    Height="170"
                    RingSize="150" />
                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        HorizontalAlignment="Center"
                        FontFamily="Arial"
                        FontSize="16"
                        Foreground="White"
                        Text="GPU 温度" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Arial"
                        FontSize="16"
                        Foreground="White">
                        <Run FontWeight="Bold" Text="{Binding ElementName=slider, Path=Value, StringFormat={}{0:F}, FallbackValue=100}" />
                        <Run Text="[℃]" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </WrapPanel>
    </Grid>
</UserControl>
