<UserControl
    x:Class="ShydControls.Wpf.Demo.Views.ConventionalControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShydControls.Wpf;assembly=ShydControls.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShydControls.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Slider
            x:Name="slider"
            Grid.Row="0"
            Width="200"
            Margin="10"
            HorizontalAlignment="Left"
            Interval="1"
            Maximum="100"
            Minimum="0"
            Value="50" />
        <WrapPanel Grid.Row="1">
            <controls:Instrument
                Width="150"
                Height="150"
                Interval="10"
                Maximum="100"
                Minimum="0"
                PlateBackground="Orange"
                ScaleBrush="White"
                Value="{Binding ElementName=slider, Path=Value}" />
            <controls:CircularProgressBar
                Width="100"
                Height="100"
                BackColor="LightGray"
                ForeColor="Orange"
                Value="{Binding ElementName=slider, Path=Value}" />
            <controls:NumbericTextBox
                Width="120"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                MaxValue="100"
                MinValue="0"
                Precision="2"
                Text="{Binding ElementName=slider, Path=Value, Mode=TwoWay, UpdateSourceTrigger=Default}" />
            <controls:ProgressRing
                Foreground="Orange"
                IsActive="True"
                IsLarge="True" />
            <controls:SkeletonScreen Width="450" Height="100" />
            <controls:ThreeDTest Width="200" Height="200" />
        </WrapPanel>
    </Grid>
</UserControl>
