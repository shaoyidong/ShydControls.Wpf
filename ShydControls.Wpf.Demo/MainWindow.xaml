<Window
    x:Class="ShydControls.Wpf.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShydControls.Wpf.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ShydControls 演示程序"
    Width="1024"
    Height="768"
    mc:Ignorable="d">
    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  标题栏  -->
        <Border
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="0,0,0,1">
            <TextBlock
                Margin="10"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#CCCCCC">
                ShydControls 控件库演示
            </TextBlock>
        </Border>

        <!--  导航菜单  -->
        <Border
            Grid.Row="1"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    <Button
                        x:Name="btnBasic"
                        Click="btnBasic_Click"
                        Style="{StaticResource NavButtonStyle}">
                        基础控件
                    </Button>
                    <Button
                        x:Name="btnAperture"
                        Click="btnAperture_Click"
                        Style="{StaticResource NavButtonStyle}">
                        光圈控件
                    </Button>
                    <Button
                        x:Name="btnDashboard"
                        Click="btnDashboard_Click"
                        Style="{StaticResource NavButtonStyle}">
                        仪表盘控件
                    </Button>
                    <Button
                        x:Name="btnIndustrial"
                        Click="btnIndustrial_Click"
                        Style="{StaticResource NavButtonStyle}">
                        工业组件
                    </Button>
                    <Button
                        x:Name="btnCharts"
                        Click="btnCharts_Click"
                        Style="{StaticResource NavButtonStyle}">
                        图表控件
                    </Button>
                    <Button
                        x:Name="btnOther"
                        Click="btnOther_Click"
                        Style="{StaticResource NavButtonStyle}">
                        其他控件
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  内容区域  -->
        <ContentControl
            x:Name="contentControl"
            Grid.Row="1"
            Grid.Column="1" />
    </Grid>
</Window>
